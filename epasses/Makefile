COREIRCONFIG ?= g++
CXX ?= g++

ifeq ($(COREIRCONFIG),g++)
CXX = g++
endif

ifeq ($(COREIRCONFIG),g++-4.9)
CXX = g++-4.9
endif

CXXFLAGS = -std=c++11  -Wall  -fPIC

ifdef COREDEBUG
CXXFLAGS += -O0 -g3 -D_GLIBCXX_DEBUG 
endif

HOME = ..
LPATH = -L$(HOME)/lib
INCS = -I$(HOME)/include -I.
SRCFILES = $(wildcard [^_]*.cpp)
OBJS = $(patsubst %.cpp,build/%.o,$(SRCFILES))

DYLIBS = $(patsubst %.cpp,build/%.dylib,$(SRCFILES))
SOLIBS = $(patsubst %.cpp,build/%.so,$(SRCFILES))

all: $(DYLIBS) $(SOLIBS)

so: $(SOLIBS)

dylib: $(DYLIBS)

clean:
	rm -rf build/*

build/treereduction.so: build/treereduction.so
	$(CXX) -shared $(LPATH) -o $@ $^ -lcoreir -lcoreir-commonlib
	cp $@ $(HOME)/lib/treereduction.so

build/treereduction.dylib: build/treereduction.o
	$(CXX) -install_name "@rpath/treereduction.dylib" -dynamiclib $(LPATH) -lcoreir -lcoreir-commonlib -o $@ $^
	cp $@ $(HOME)/lib/treereduction.dylib

build/%.so: build/%.o
	$(CXX) -shared $(LPATH) -o $@ $^ -lcoreir 
	cp $@ $(HOME)/lib/$*.so

build/%.dylib: build/%.o
	$(CXX) -install_name "@rpath/$*.dylib" -dynamiclib $(LPATH) -lcoreir -o $@ $^
	cp $@ $(HOME)/lib/$*.dylib

build/%.o: %.cpp $(DEPS)
	$(CXX) $(CXXFLAGS) $(INCS) -c -o $@ $<
